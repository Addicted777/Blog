<article class="post">
    <section class="post-head">
        <h1><%= @post.title %></h1>
        <p><%= @post.summary %></p>
        <p><%= @post.body %>
        <br>
        <small>
            <time><%= @post.created_at.to_date.strftime("%d %B, %Y") %></time>
            <br>
            <%= @post.user_id %>
        </smalL>
        <hr>
        <div>
            <%= link_to 'Back', :back, class: 'btn btn-outline-secondary' %>
            |
            <%= link_to 'Edit', edit_post_path(@post), class: 'btn btn-warning' %>
            |
            <%= button_to 'Delete', post_path(@post), method: :delete, data: {confirm: "Are you sure you want to delete this post?"}, class: 'btn btn-danger' %>
        </div>
    </section>

    <section class="post-body">
        <%= image_tag @post.image.url(:large), class: 'img-show' if @post.image? %>
    </section>
</article>
